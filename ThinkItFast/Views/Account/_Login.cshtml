@model ThinkItFast.ViewModel.LoginViewModel

<html>
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">     
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />     
    <link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">    
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">     
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">     
    <link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">     
    <link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">     
    <link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">     
    <link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
     <link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">     
     <link href="~/css/site.css" rel="stylesheet" />
    

    <style>
 
  

        svg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index:-1;
}
 
   .out-top {
       animation: rotate 20s linear infinite;
       transform-origin: 13px 25px;
   }
   .in-top {
       animation: rotate 10s linear infinite;
       transform-origin: 13px 25px;
   }
   .out-bottom {
       animation: rotate 25s linear infinite;
       transform-origin: 84px 93px;
   }
   .in-bottom {
       animation: rotate 15s linear infinite;
       transform-origin: 84px 93px;
   }

        .signup-form {
            width: 400px;
            margin: 0 auto;
            padding: 120px 0;
        }

            .signup-form form {
                border-radius: 3px;
                margin-bottom: 15px;
                 
                box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                padding: 30px;
            }
</style>   
</head>
<body>
    <svg preserveAspectRatio="xMidYMid slice" viewBox="10 10 80 80">

        <path fill="#315481" class="out-top" d="M37-5C25.1-14.7,5.7-19.1-9.2-10-28.5,1.8-32.7,31.1-19.8,49c15.5,21.5,52.6,22,67.2,2.3C59.4,35,53.7,8.5,37-5Z" />
        <path fill="#1C314C" class="in-top" d="M20.6,4.1C11.6,1.5-1.9,2.5-8,11.2-16.3,23.1-8.2,45.6,7.4,50S42.1,38.9,41,24.5C40.2,14.1,29.4,6.6,20.6,4.1Z" />
        <path fill="#1C314C" class="out-bottom" d="M105.9,48.6c-12.4-8.2-29.3-4.8-39.4.8-23.4,12.8-37.7,51.9-19.1,74.1s63.9,15.3,76-5.6c7.6-13.3,1.8-31.1-2.3-43.8C117.6,63.3,114.7,54.3,105.9,48.6Z" />
        <path fill="#315481" class="in-bottom" d="M102,67.1c-9.6-6.1-22-3.1-29.5,2-15.4,10.7-19.6,37.5-7.6,47.8s35.9,3.9,44.5-12.5C115.5,92.6,113.9,74.6,102,67.1Z" />
    </svg>
    <div class=" container-fluid">
        @if (TempData["Message"] != null)
        {
            <div class="text-center">
                <div class="alert alert-danger alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">×</a>
                    <strong>Error !</strong>  @TempData["Message"]
                </div>
            </div>
        }
        <div class="signup-form">
        <form class="login mx-auto" asp-action="Login" asp-controller="Account" method="post">
        <h1>Candidate Login</h1>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fa fa-paper-plane"></i>
                        </span>
                    </div>
                    <input asp-for="Email" class="form-control" placeholder="Email Address" required="required" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class="fa fa-lock"></i>
                        </span>
                    </div>
                    <input asp-for="Password" class="form-control" placeholder="Password" required="required">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
                    <button class="button login_btn " type="submit">
                        <span class="button__text" >Log In Now</span>
                    </button>
        </form>
                
            <div class="text-center p-t-45 p-b-4">
                <span class="txt1">Forgot</span>
                <a asp-controller="Account" asp-action="Reset" class="txt2 hov1">Username / Password?</a>
            </div>
            <div class="text-center p-b-4">
                <span class="txt1">Create an account?</span>
                <a asp-controller="Account" asp-action="Register" class="txt2 hov1">Sign up</a>
            </div>

        </div>
    </div>
    
 
     
    <script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>     
    <script src="~/vendor/animsition/js/animsition.min.js"></script>     
    <script src="~/vendor/bootstrap/js/popper.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>     
    <script src="~/vendor/select2/select2.min.js"></script>     
    <script src="~/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/vendor/daterangepicker/daterangepicker.js"></script>     
    <script src="~/vendor/countdowntime/countdowntime.js"></script>        
    <script src="~/js/main.js"></script>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
